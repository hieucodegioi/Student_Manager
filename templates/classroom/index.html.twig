{% extends 'base.html.twig' %}

{% block title %}Classroom index{% endblock %}

{% block body %}
    <h1>Classroom</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Department</th>
                <th>NumberOfMenbers</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classroom in classrooms %}
            <tr>
                <td>{{ classroom.id }}</td>
                <td>{{ classroom.Name }}</td>
                <td>{{ classroom.Department }}</td>
                <td>{{ classroom.NumberOfMenbers }}</td>
                <td>
                    <a href="{{ path('app_classroom_show', {'id': classroom.id}) }}">show</a>
                    <a href="{{ path('app_classroom_edit', {'id': classroom.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classroom_new') }}">Create new</a>
{% endblock %}
